{
  "schemaVersion": 1,
  "id": "stn_mobai",
  "version": "${version}",
  "name": "Survive The Night - Mob AI",
  "description": "Enhanced AI system for hostile mobs. Adds sensory detection (sound, smell, light, heat), block breaking, and village targeting. Use as a base for mob addon mods.",
  "authors": ["wecanbefit"],
  "contact": {
    "homepage": "https://github.com/wecanbefit/survivethenight",
    "sources": "https://github.com/wecanbefit/survivethenight"
  },
  "license": "MIT",
  "icon": "assets/stn_mobai/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": ["com.stn.mobai.STNMobAI"],
    "client": ["com.stn.mobai.client.STNMobAIClient"]
  },
  "mixins": [
    "stn_mobai.mixins.json"
  ],
  "accessWidener": "stn_mobai.accesswidener",
  "depends": {
    "fabricloader": ">=0.16.0",
    "minecraft": "~1.21",
    "java": ">=21",
    "fabric-api": "*",
    "stn_core": "*"
  },
  "suggests": {
    "stn_survival": "*"
  }
}
